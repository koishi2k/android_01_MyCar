<?xml version="1.0" encoding="utf-8"?>
<!-- Based on navigation drawer scheme -->
<!-- https://www.google.com/design/spec/patterns/navigation-drawer.html#navigation-drawer-specs -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="match_parent"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/nav_drawer_item_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/nav_drawer_item_icon"
        />

    <TextView
        android:id="@+id/nav_drawer_item_caption"
        android:layout_height="16dp"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>